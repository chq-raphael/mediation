<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xcjaas.mediation.mapper.UserMapper">
    <!--register.html插入用户数据-->
    <insert id="addUser" useGeneratedKeys="true" keyProperty="userId">
      insert into t_user(userName,userSex,userBirth,userCardId,userTel,userJig,userMinz,userAddr)
       values ( #{userName},#{userSex},#{userBirth},#{userCardId},#{userTel},#{userJig},#{userMinz},#{userAddr});
    </insert>
    <!--创建案件-->
    <insert id="insertCase" useGeneratedKeys="true" keyProperty="case_id">
        insert into t_case(case_type,case_state,case_user_id)
        VALUES (#{case_type},#{case_state},#{case_user_id});
    </insert>


    <!--数据库插入当事人-->
    <insert id="insertDsr" parameterType="ArrayList" useGeneratedKeys="true" keyProperty="dsrId">
        insert into t_dsr(dsrName,dsrTel,dsrState,teId,caseId)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.dsrName},#{item.dsrTel},#{item.dsrState},#{item.teId},#{item.caseId})
        </foreach>
    </insert>

    <!--choice-mediate.html中查到3个调解员返回给页面-->
    <resultMap id="choose3" type="Mediator">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="phone_num" property="phone_num"/>
        <result column="picture" property="picture"></result>
    </resultMap>
    <select id="selectThreeMediators" resultMap="choose3">
      SELECT * FROM t_mediator limit 0,5;
    </select>

    <!--挑选备用的两个调解员-->
    <insert id="insertTwoMediators" parameterType="ArrayList" useGeneratedKeys="true" keyProperty="state_0_id">
        insert into t_case_state_prepare(state_0_user_id,state_0_case_id,state_0_mediator_id)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.state_0_user_id},#{item.state_0_case_id},#{item.state_0_mediator_id})
        </foreach>
    </insert>

    <select id="selectOne" parameterType="int" resultType="User">
        SELECT * FROM t_user WHERE userId=#{userId}
    </select>


    <!--根据id查找个人所有案件-->
    <resultMap id="allCasesMap" type="Case">
        <id column="case_id" property="case_id"/>
        <result column="case_type" property="case_type"/>
        <result column="case_state" property="case_state"/>
        <result column="case_user_id" property="case_user_id"/>
        <result column="case_mediator_id" property="case_mediator_id"/>
        <result column="user_judged" property="user_judged"/>
        <result column="details" property="details"/>
        <result column="court" property="court"/>
        <result column="create_date" property="create_date"/>
        <result column="type_name" property="type_name"/>
        <result column="state_name" property="state_name"/>
    </resultMap>
    <select id="selectCasesByUserId" parameterType="int" resultMap="allCasesMap">
       SELECT * FROM
        t_case
        JOIN t_case_type ON t_case.case_type = t_case_type.case_type
        join t_case_state on t_case.case_state=t_case_state.case_state
        where case_user_id=#{userId};
    </select>
    <!--根据案件id查找一个案件-->
    <select id="seleceOneByCaseId" parameterType="int" resultType="Case">
       SELECT * FROM t_case
        JOIN t_case_type ON t_case.case_type = t_case_type.case_type
        join t_case_state on t_case.case_state=t_case_state.case_state
        where t_case.case_id=#{caseId};
    </select>

    <!--根据案件id查找一个案件的评价-->
    <select id="selectJudgedDetailByCaseId" parameterType="int" resultType="CaseJudgedDetail">
        SELECT case_id,judged_detail FROM t_case
        where t_case.case_id=#{caseId};
    </select>

    <!--插入评价-->
    <update id="updateCaseJudgedDetail" parameterType="CaseJudgedDetail">
       update t_case set judged_state=1,judged_detail=#{judged_detail} WHERE case_id=#{case_id}
    </update>


</mapper>

